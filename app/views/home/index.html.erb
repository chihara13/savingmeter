<% # トップページ %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'layouts/user_info' %>
      </section>
      <section>
        <%= render 'layouts/saving_item_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="top-container">
    <h1 class="title">節約メーターへようこそ！</h1>
    <div class="row">
      <div class="col center">    
        <% # = link_to image_tag("saving.png", alt: "Saving.logo", width:'30%') %>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">「節約メーター」とは</span>
            <p>あなたが1日に我慢したものを書き込んで、今までにどれだけ節約できたのか記録するサービスです。</p>
          </div>
          <div class="card-action">
            <%= link_to "新規登録", new_user_registration_path %>
            <%= link_to "ログイン", new_user_session_path %>
          </div>
        </div>
      </div>
    </div>

  </div>
<% end %>

<% if logged_in? %>
  <script>
    $('body').removeClass('top_page');
  </script>
<% else %>
  <script>
    $('body').addClass('top_page');
  </script>
<% end %>

