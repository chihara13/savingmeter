<% # トップページ %>

<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'layouts/user_info' %>
      </section>
      <section class="stats">
        <%= render 'layouts/stats' %>
      </section>
      <section>
        <% # ↓のviewにフォームを追加 %>
        <% # render 'layouts/saving_item_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="top-container">
    <h1 class="title">節約メーターへようこそ！</h1>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">「節約メーター」とは</span>
            <p>あなたの日々の節約をコツコツと積み立てるサービスです。</p>
          </div>
          <div class="card-action">
            <%= link_to "新規登録", new_user_registration_path %>
            <%= link_to "ログイン", new_user_session_path %>
          </div>
        </div>
      </div>
    </div>

  </div>
<% end %>

<% if user_signed_in? %>
  <script>
    $('body').removeClass('top_page');
  </script>
<% else %>
  <script>
    $('body').addClass('top_page');
  </script>
<% end %>