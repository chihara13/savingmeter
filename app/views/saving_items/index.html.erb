<p id="notice"><%= notice %></p>

<h1>Saving Items</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>カテゴリー</th>
      <th>日付</th>
      <th>価格</th>
      <th>ひとことメモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saving_items.each do |saving_item| %>
      <tr>
        <td><%= saving_item.item_name %></td>
        <td><%= saving_item.category_id %></td>
        <td><%= saving_item.date %></td>
        <td><%= saving_item.amount %></td>
        <td><%= saving_item.content %></td>
        <td><%= link_to '詳細', saving_item %></td>
        <td><%= link_to '編集', edit_saving_item_path(saving_item) %></td>
        <td><%= link_to '削除', saving_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

