<%= form_with(model: saving_item, local: true) do |form| %>
  <% if saving_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(saving_item.errors.count, "error") %> prohibited this saving_item from being saved:</h2>

      <ul>
      <% saving_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :節約したもの %>
    <%= form.text_field :item_name %>
  </div>

  <div class="field">
    <%= form.label :カテゴリ %>
    <%= form.select :category, [["趣味","趣味"],["日用品","日用品"],["交通費","交通費"],["嗜好品","嗜好品"],["食費","食費"],["飲料","飲料"],["衣服","衣服"],["生活費","生活費"],["通信費","通信費"],["その他","その他"]] %>
  </div>

  <div class="field">
    <%= form.label :日付 %>
    <%= form.text_field :date, class: 'date-picker' %>
  </div>

  <div class="field">
    <%= form.label :価格 %>
    <%= form.number_field :amount %>
  </div>

  <div class="field">
    <%= form.label :一言メモ %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
